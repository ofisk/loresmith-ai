/**
 * Local development configuration for Wrangler
 * This configuration removes the secrets store binding so ADMIN_SECRET can be used from .dev.vars
 */
{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "loresmith-ai",
  "main": "src/server.ts",
  "compatibility_date": "2025-05-07",
  "compatibility_flags": [
    "nodejs_compat",
    "nodejs_compat_populate_process_env",
  ],
  "assets": {
    "directory": "dist/client",
  },
  "vars": {
    "VITE_API_URL": "http://localhost:8787",
    "CORS_ALLOWED_ORIGINS": "http://localhost:5173,http://localhost:5174",
    "MAX_INDEX_FILE_BYTES": "4194304",

    "AUTORAG_PREFIX": "autorag",
    "STAGING_PREFIX": "staging",
    "READINESS_TIMEOUT_SEC": "600",
    "READINESS_BACKOFF_MS": "2000",
    "AUTORAG_SEARCH_URL": "https://<autorag-endpoint>/search",
    // ADMIN_SECRET and OPENAI_API_KEY are loaded from .dev.vars file
  },
  // Explicitly disable secrets store bindings for local development
  "secrets_store_secrets": [],
  "durable_objects": {
    "bindings": [
      { "name": "Chat", "class_name": "Chat" },
      { "name": "UserFileTracker", "class_name": "UserFileTracker" },
      { "name": "UploadSession", "class_name": "UploadSessionDO" },
    ],
  },
  "r2_buckets": [
    {
      "binding": "R2",
      "bucket_name": "loresmith-files",
      "preview_bucket_name": "loresmith-files",
    },
  ],
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "loresmith-db",
      "database_id": "7a5854a8-9b74-401b-83d0-3e69941feb8d",
    },
  ],
  "vectorize": [
    {
      "binding": "VECTORIZE",
      "index_name": "loresmith-embeddings",
    },
  ],
  "ai": {
    "binding": "AI",
  },
  "queues": {
    "producers": [
      {
        "queue": "upload-events",
        "binding": "FILE_PROCESSING_QUEUE",
      },
      {
        "queue": "file-processing-dlq",
        "binding": "FILE_PROCESSING_DLQ",
      },
    ],
    "consumers": [
      {
        "queue": "upload-events",
        "max_batch_size": 1,
        "max_retries": 5,
      },
    ],
  },
  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": ["Chat", "UserFileTracker"],
    },
    {
      "tag": "v2",
      "new_sqlite_classes": ["CampaignManager"],
    },
    {
      "tag": "v3",
      "new_sqlite_classes": [],
    },
    {
      "tag": "v4",
      "deleted_classes": ["CampaignManager"],
    },
    {
      "tag": "v5",
      "new_classes": ["UploadSessionDO"],
    },
    {
      "tag": "v6",
      "new_classes": [],
    },
  ],
  "observability": {
    "enabled": true,
  },
}
